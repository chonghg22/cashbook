<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdu.cashbook.mapper.AdminMapper">
	<!--가계부 수정시 cashNo값을 가져오는 쿼리 -->
	<insert id = "insertAdmin" parameterType = "com.gdu.cashbook.vo.Admin">
	INSERT 
	INTO cashbook_admin
	(
	admin_id
	)
	VALUES
	(
	#{memberId}
	)
	</insert>
	<select id = "selectLoginAdmin" resultType="String" parameterType="com.gdu.cashbook.vo.Admin">
		SELECT
			admin_id		
		FROM cashbook_admin
		WHERE admin_id=(
		SELECT 
	 		member_id
	 	FROM member
	 	WHERE member_id = #{adminId}
	 	AND member_pw = PASSWORD(#{adminPw})
		)
	
	</select>
</mapper>